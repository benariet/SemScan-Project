{
  "baseUrl": "http://localhost:8080",
  "flowSummary": [
    {
      "step": 1,
      "name": "Create Seminar",
      "request": "Create Seminar",
      "notes": "Presenter creates a new seminar record with numeric presenterId."        
    },
    {
      "step": 2,
      "name": "List Seminars",
      "request": "List All Seminars",
      "notes": "Student or admin fetches available seminars."        
    },
    {
      "step": 3,
      "name": "Create Session",
      "request": "Create Session",
      "notes": "Presenter schedules a session for a seminar."        
    },
    {
      "step": 4,
      "name": "List Sessions",
      "request": "List Sessions For Seminar",
      "notes": "Mobile app loads sessions for a seminar before scanning."        
    },
    {
      "step": 5,
      "name": "Record Attendance",
      "request": "Record Attendance",
      "notes": "Scanner posts attendance with numeric session and student IDs."        
    }
  ],
  "requests": [
    {
      --  V
      "name": "List All Seminars",
      "method": "GET",
      "url": "/api/v1/seminars",
      "description": "Retrieve every seminar; useful after creating new seminars."
    },
    { -- V
      "name": "Get Seminar By ID",
      "method": "GET",
      "url": "/api/v1/seminars/1",
      "description": "Fetch a single seminar by its numeric ID."
    },
    {
      -- V
      "name": "List Seminars By Presenter",
      "method": "GET",
      "url": "/api/v1/seminars/presenter/1",
      "description": "Presenter dashboard: list seminars owned by presenterId=1."
    },
    {
      -- V
      "name": "Create Seminar",
      "method": "POST",
      "url": "/api/v1/seminars",
      "headers": {
        "Content-Type": "application/json",
        "Accept": "application/json"
      },
      "description": "Create a seminar using numeric presenterId.",
      "body": {
        "seminarName": "Edge AI for Mobile",
        "description": "Lightweight ML models on devices",
        "presenterId": 1
      }
    },
    { -- V
      "name": "Update Seminar",
      "method": "PUT",
      "url": "/api/v1/seminars/1",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "seminarName": "AI and Machine Learning in Healthcare (Updated)",
        "description": "Revised agenda"
      }
    },
    {
      "name": "Delete Seminar",
      "method": "DELETE",
      "url": "/api/v1/seminars/3"
    },
    {
      "name": "List Sessions For Seminar",
      "method": "GET",
      "url": "/api/v1/sessions",
      "queryParams": {
        "seminarId": 1
      }
    },
    {
      "name": "Create Session",
      "method": "POST",
      "url": "/api/v1/sessions",
      "headers": {
        "Content-Type": "application/json",
        "Accept": "application/json"
      },
      "description": "Schedule a new session for seminarId=1.",
      "body": {
        "seminarId": 1,
        "startTime": "2025-03-01T10:00:00",
        "endTime": "2025-03-01T11:30:00",
        "status": "OPEN",
        "location": "Tech Building Room 204"
      }
    },
    {
      "name": "Update Session Status",
      "method": "PATCH",
      "url": "/api/v1/sessions/2/status",
      "headers": {
        "Content-Type": "application/json"
      },
      "description": "Close or reopen an existing session.",
      "body": {
        "status": "CLOSED"
      }
    },
    { -- V
      "name": "Record Attendance",
      "method": "POST",
      "url": "/api/v1/attendance",
      "headers": {
        "Content-Type": "application/json",
        "Accept": "application/json"
      },
      "description": "Primary scan flow: mark attendance for a student in a session.",
      "body": {
        "sessionId": 1,
        "studentId": 6,
        "attendanceTime": "2025-02-10T10:06:00",
        "method": "QR_SCAN"
      }
    },
    {
      "name": "Submit Manual Attendance Request",
      "method": "POST",
      "url": "/api/v1/attendance/manual",
      "headers": {
        "Content-Type": "application/json",
        "Accept": "application/json"
      },
      "body": {
        "sessionId": 1,
        "studentId": 7,
        "reason": "Scanner failure",
        "deviceId": "android-device-123"
      }
    },
    {
      "name": "List Pending Manual Requests",
      "method": "GET",
      "url": "/api/v1/attendance/manual/pending-requests?sessionId=1"
    },
    {
      "name": "Approve Manual Attendance",
      "method": "POST",
      "url": "/api/v1/attendance/manual/45/approve?approvedBy=2"
    },
    {
      "name": "Reject Manual Attendance",
      "method": "POST",
      "url": "/api/v1/attendance/manual/45/reject?approvedBy=2"
    },
    {
      "name": "Fetch Presenter Availability",
      "method": "GET",
      "url": "/api/v1/presenters/1/availability"
    },
    {
      "name": "Create Presenter Availability Slot",
      "method": "POST",
      "url": "/api/v1/presenters/availability",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "presenterId": 1,
        "weekday": 1,
        "startHour": 10,
        "endHour": 12
      }
    },
    {
      "name": "Submit App Logs",
      "method": "POST",
      "url": "/api/v1/logs/app",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "logs": [
          {
            "timestamp": "2025-02-10T10:05:30",
            "level": "INFO",
            "tag": "ATTENDANCE",
            "message": "Alice marked attendance via QR.",
            "userId": 6,
            "userRole": "STUDENT",
            "deviceInfo": "Android 14; Pixel 8",
            "appVersion": "1.4.0"
          }
        ]
      }
    }
  ]
}


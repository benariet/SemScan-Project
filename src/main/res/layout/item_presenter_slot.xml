<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:id="@+id/layout_slot_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/bg_slot_green_gradient">

        <!-- Date Text -->
        <TextView
            android:id="@+id/text_slot_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/text_slot_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal" />

        <!-- Register Button (Only for available slots) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register_slot"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/presenter_slot_register_button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:strokeColor="@color/white"
            app:strokeWidth="1.5dp"
            app:cornerRadius="30dp"
            android:visibility="gone" />

        <!-- Waiting List Button (Only for full slots) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_waiting_list"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/presenter_slot_join_waiting_list"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:strokeColor="@color/white"
            app:strokeWidth="1.5dp"
            app:cornerRadius="30dp"
            android:visibility="gone" />

        <!-- Cancel Waiting List Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_waiting_list"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/presenter_slot_cancel_waiting_list"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:strokeColor="@color/white"
            app:strokeWidth="1.5dp"
            app:cornerRadius="30dp"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:id="@+id/layout_slot_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bg_slot_green_gradient">

        <!-- Date Text -->
        <TextView
            android:id="@+id/text_slot_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_900"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Status Text (e.g., Available, Full) -->
        <TextView
            android:id="@+id/text_slot_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray_900"
            android:textSize="14sp"
            android:textStyle="normal"
            android:lineSpacingExtra="4dp" />

        <!-- Details Text (approved/pending/waiting counts) -->
        <TextView
            android:id="@+id/text_slot_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/gray_700"
            android:textSize="13sp"
            android:visibility="gone" />

        <!-- Presenter Names (registered, pending, waiting) -->
        <TextView
            android:id="@+id/text_presenter_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray_700"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- Bottom row: Buttons at right -->
        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="end">

            <!-- Register Button (Only for available slots) -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_register_slot"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minHeight="40dp"
                android:background="@drawable/btn_outlined_blue"
                android:text="@string/presenter_slot_register_button"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#007BFF"
                android:textAllCaps="true"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:visibility="gone" />

            <!-- Waiting List Button (Only for full slots) -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_waiting_list"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minHeight="40dp"
                android:background="@drawable/btn_outlined_blue"
                android:text="@string/presenter_slot_join_waiting_list"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#007BFF"
                android:textAllCaps="true"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="gone" />

            <!-- Cancel Waiting List Button (Destructive Style - White Fill) -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel_waiting_list"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minHeight="40dp"
                android:background="@drawable/btn_destructive_white"
                android:text="@string/presenter_slot_cancel_waiting_list"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FF3B30"
                android:textAllCaps="true"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

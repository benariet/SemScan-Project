<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_blue"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/presenter_my_slot_screen_title"
        app:titleTextColor="@color/white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Slot Details Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/container_slot_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your Registered Presentation"
                            android:textColor="@color/gray_600"
                            android:textSize="14sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:id="@+id/text_slot_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/gray_900"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="@color/gray_200" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="@color/primary_blue"
                                android:contentDescription="@null" />

                            <TextView
                                android:id="@+id/text_slot_schedule"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:textColor="@color/gray_800"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_location"
                                app:tint="@color/primary_blue"
                                android:contentDescription="@null" />

                            <TextView
                                android:id="@+id/text_slot_location"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:textColor="@color/gray_800"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_slot_presenters"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:textColor="@color/gray_700"
                            android:textSize="15sp"
                            android:visibility="gone" />

                        <!-- Buttons - Full Width Stacked -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_change_slot"
                            style="@style/SemScanButtonPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="@string/presenter_my_slot_change_button_short" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_cancel_slot"
                            style="@style/SemScanButtonOutlinedPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/presenter_my_slot_cancel_button" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/container_empty_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="48dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_calendar_add"
                        app:tint="@color/gray_400"
                        android:contentDescription="@string/presenter_my_slot_screen_title" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="No Presentation Scheduled"
                        android:textColor="@color/gray_800"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/presenter_my_slot_empty"
                        android:textColor="@color/gray_600"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_go_to_slots"
                        style="@style/SemScanButtonPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/presenter_my_slot_change_button" />
                </LinearLayout>

                <!-- Intro Text (only shown when slot exists) -->
                <TextView
                    android:id="@+id/text_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="@string/presenter_my_slot_intro"
                    android:textColor="@color/gray_700"
                    android:textSize="14sp" />

            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>

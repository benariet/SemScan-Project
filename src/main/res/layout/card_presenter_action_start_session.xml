<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_start_session"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/card_start_session_inner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bg_button_orange_gradient"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:gravity="center_vertical">

        <!-- White Circular Icon Container -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="27.5dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_qr_scanner"
                android:contentDescription="@string/start_session_show_qr"
                android:padding="12dp"
                android:tint="@color/icon_blue"
                android:scaleType="fitCenter" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Text -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/start_session_show_qr"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:lineSpacingMultiplier="1.2" />

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_forward"
            android:contentDescription="@string/next"
            android:tint="@color/white" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_new_seminar"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/gray_800"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <!-- Seminar Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seminar_name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gray_800"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_seminar_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/enter_seminar_name"
        android:inputType="text"
        android:background="@drawable/edittext_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Seminar Code -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seminar_code"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gray_800"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_seminar_code"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/enter_seminar_code"
        android:inputType="textCapCharacters"
        android:background="@drawable/edittext_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/gray_900"
        android:textColorHint="@color/gray_600"
 />

    <!-- Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seminar_description"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gray_800"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="@string/enter_seminar_description"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:background="@drawable/edittext_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/gray_900"
        android:textColorHint="@color/gray_600"
 />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cancel"
            android:textSize="16sp"
            android:background="@drawable/button_secondary"
            android:textColor="@color/gray_700"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_create"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Create"
            android:textSize="16sp"
            android:background="@drawable/button_primary"
            android:textColor="@color/button_pastel_blue_text"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

    </LinearLayout>

</LinearLayout>

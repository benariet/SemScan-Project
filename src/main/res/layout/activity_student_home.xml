<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/SemScanToolbarPopup"
        app:title="@string/student_home_title"
        app:titleTextColor="@color/white" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:gravity="top">

            <!-- Welcome Message -->
            <TextView
                android:id="@+id/text_welcome_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome, Student!"
                android:textSize="18sp"
                android:textColor="@color/gray_700"
                android:layout_marginBottom="24dp"
                android:gravity="center" />

            <!-- Main Action Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Scan Attendance Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_scan_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical"
                        android:minHeight="72dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_qr_scanner"
                            android:contentDescription="@string/scan_attendance"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/circle_background_primary"
                            android:padding="14dp"
                            android:tint="@color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/scan_attendance"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_900"
                            android:gravity="center_vertical" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="@string/next"
                            android:tint="@color/gray_500"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Manual Attendance Request Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_manual_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical"
                        android:minHeight="72dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_edit"
                            android:contentDescription="@string/manual_attendance_request"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/circle_background_accent"
                            android:padding="14dp"
                            android:tint="@color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/manual_attendance_request"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_900"
                            android:gravity="center_vertical" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="@string/next"
                            android:tint="@color/gray_500"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="12dp"
        android:elevation="8dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_change_role"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/change_role"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:drawableStart="@drawable/ic_swap_horiz"
            android:drawablePadding="8dp"
            android:drawableTint="@color/primary_blue"
            app:strokeColor="@color/primary_blue"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            android:layout_marginEnd="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/logout"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:drawableStart="@drawable/ic_arrow_back"
            android:drawablePadding="8dp"
            android:drawableTint="@color/error_red"
            android:textColor="@color/error_red"
            app:strokeColor="@color/error_red"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            android:layout_marginStart="6dp" />

    </LinearLayout>

</LinearLayout>

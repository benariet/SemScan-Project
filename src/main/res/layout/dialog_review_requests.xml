<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Review Manual Attendance Requests"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary_blue"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/text_pending_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 pending requests"
        android:textSize="14sp"
        android:textColor="@color/gray_600"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Bulk Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_approve_all_safe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Approve All Safe"
            android:textSize="12sp"
            android:textColor="@color/button_pastel_blue_text"
            android:background="@drawable/button_primary"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btn_reject_all_duplicates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reject Duplicates"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/button_danger"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- Requests List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_requests"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp" />

    <!-- Bottom Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_cancel_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/gray_600"
            android:background="@drawable/button_transparent"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_continue_export"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Continue to Export"
            android:textColor="@color/button_pastel_blue_text"
            android:background="@drawable/button_primary"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>

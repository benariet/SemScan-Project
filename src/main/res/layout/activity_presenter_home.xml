<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_presenter">

    <!-- AppBar with Gradient and Rounded Bottom -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_appbar_rounded"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/presenter_home_title"
        app:titleTextColor="@color/white"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Welcome Message -->
            <TextView
                android:id="@+id/text_welcome_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="40dp"
                android:text="@string/presenter_home_welcome_default"
                android:textColor="@color/welcome_text_color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Main Action Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/card_presenter_action_start_session" />

                <include layout="@layout/card_presenter_action_enroll_slot" />

                <include layout="@layout/card_presenter_action_my_slot" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <!-- Change Role Card -->
            <include layout="@layout/card_presenter_action_change_role" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

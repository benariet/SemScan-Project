<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Student Name and Time Row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student benariet"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/text_request_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="2026-01-05 18:15:50"
                android:textSize="12sp"
                android:textColor="@color/gray_600"/>

        </RelativeLayout>

        <!-- Reason -->
        <TextView
            android:id="@+id/text_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera broken"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="8dp"/>

        <!-- Flags Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/text_flags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="&#x2713; In window"
                android:textSize="12sp"
                android:textColor="@color/success_green"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_duplicate_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#x26A0; Duplicate"
                android:textSize="12sp"
                android:textColor="@color/warning_orange"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_approve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="APPROVE"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="#007BFF"
                app:strokeColor="#007BFF"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="REJECT"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="#FF3B30"
                app:strokeColor="#FF3B30"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Logging Settings"
        app:titleTextColor="@color/white" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Server Logging Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Server Logging"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue"
                        android:layout_marginBottom="8dp" />

                    <CheckBox
                        android:id="@+id/check_server_logging"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enable server logging"
                        android:textColor="@color/gray_700"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Send logs to server for debugging and monitoring"
                        android:textSize="14sp"
                        android:textColor="@color/gray_600" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Log Level Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log Level"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VERBOSE"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600" />

                        <SeekBar
                            android:id="@+id/seek_log_level"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="16dp"
                            android:max="4"
                            android:progress="2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ERROR"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_log_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INFO"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Privacy Settings Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy Settings"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue"
                        android:layout_marginBottom="8dp" />

                    <CheckBox
                        android:id="@+id/check_include_device_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Include device information"
                        android:textColor="@color/gray_700"
                        android:layout_marginBottom="8dp" />

                    <CheckBox
                        android:id="@+id/check_include_user_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Include user information"
                        android:textColor="@color/gray_700"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Control what information is included in logs"
                        android:textSize="14sp"
                        android:textColor="@color/gray_600" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Batch Settings Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Batch Settings"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Batch Size:"
                            android:textSize="16sp"
                            android:textColor="@color/gray_700"
                            android:layout_marginEnd="16dp" />

                        <Spinner
                            android:id="@+id/spinner_batch_size"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Send Interval:"
                            android:textSize="16sp"
                            android:textColor="@color/gray_700"
                            android:layout_marginEnd="16dp" />

                        <Spinner
                            android:id="@+id/spinner_send_interval"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Configure how logs are batched and sent to server"
                        android:textSize="14sp"
                        android:textColor="@color/gray_600" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Test Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Testing"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <Button
                            android:id="@+id/btn_test_logging"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Test Logging"
                            android:background="@drawable/button_primary"
                            android:textColor="@color/button_pastel_blue_text"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_clear_logs"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Clear Logs"
                            android:background="@drawable/button_secondary"
                            android:textColor="@color/gray_700"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Test the logging system and clear local logs"
                        android:textSize="14sp"
                        android:textColor="@color/gray_600" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

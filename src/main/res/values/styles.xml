<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SemScanToolbarPopup" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">@color/white_900</item>
        <item name="android:textColorPrimary">@color/gray_900</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:colorForeground">@color/gray_900</item>
        <item name="colorControlNormal">@color/gray_900</item>
        <item name="android:itemTextAppearance">@style/SemScanPopupMenuItem</item>
    </style>

    <style name="SemScanPopupMenuItem" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="SemScanButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
    </style>

    <style name="SemScanButtonOutlinedPrimary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="SemScanButtonSuccess" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/success_green</item>
    </style>

    <style name="SemScanButtonWarning" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/warning_orange</item>
    </style>

    <style name="SemScanButtonDanger" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/error_red</item>
    </style>

    <style name="SemScanInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/gray_600</item>
        <item name="android:textColorHint">@color/gray_600</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <!-- Orange Theme Buttons (Pastel Orange) -->
    <style name="SemScanButtonOrange" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/appbar_orange</item>
    </style>

    <style name="SemScanButtonOutlinedOrange" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/appbar_orange</item>
        <item name="strokeColor">@color/appbar_orange</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>

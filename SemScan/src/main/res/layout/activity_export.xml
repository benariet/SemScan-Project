<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_header_gradient"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/export_to_excel"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Current Session Info -->
            <LinearLayout
                android:id="@+id/layout_session_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:background="@drawable/card_background"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Session"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_session_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading session..."
                    android:textSize="14sp"
                    android:textColor="@color/gray_600" />

            </LinearLayout>


            <!-- Export Format - Excel only -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Export Format: Excel (XLSX)"
                android:textSize="16sp"
                android:textColor="@color/gray_600"
                android:layout_marginBottom="32dp" />

            <!-- Export Button -->
            <Button
                android:id="@+id/btn_export"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Export Data"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary"
                android:textColor="@color/button_pastel_blue_text" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>



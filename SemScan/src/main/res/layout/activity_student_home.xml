<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_main">

    <!-- AppBar with Gradient and Rounded Bottom -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:background="@drawable/bg_appbar_rounded"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/student_home_title"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_menu" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Main Action Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Scan Attendance Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_scan_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_card_orange_light_gradient"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="24dp"
                            app:cardBackgroundColor="@color/icon_container_orange"
                            app:cardElevation="0dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_qr_scanner"
                                    android:contentDescription="@string/scan_attendance"
                                    android:scaleType="fitCenter"
                                    app:tint="@color/white" />

                            </FrameLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/scan_attendance"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_900"
                            android:lineSpacingMultiplier="1.2" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="@string/next"
                            app:tint="@color/gray_700" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Manual Attendance Request Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_manual_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_card_orange_light_gradient"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="24dp"
                            app:cardBackgroundColor="@color/icon_container_orange"
                            app:cardElevation="0dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_edit"
                                    android:contentDescription="@string/manual_attendance_request"
                                    android:scaleType="fitCenter"
                                    app:tint="@color/white" />

                            </FrameLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/manual_attendance_request"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_900"
                            android:lineSpacingMultiplier="1.2" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="@string/next"
                            app:tint="@color/gray_700" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Attendance History Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_attendance_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_card_orange_light_gradient"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="24dp"
                            app:cardBackgroundColor="@color/icon_container_orange"
                            app:cardElevation="0dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_history"
                                    android:contentDescription="@string/attendance_history"
                                    android:scaleType="fitCenter"
                                    app:tint="@color/white" />

                            </FrameLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/attendance_history"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_900"
                            android:lineSpacingMultiplier="1.2" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="@string/next"
                            app:tint="@color/gray_700" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <!-- Change Role Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_change_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_card_blue_light_gradient"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="@color/icon_container_blue"
                        app:cardElevation="0dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_swap_horiz"
                                android:contentDescription="@string/change_role"
                                android:scaleType="fitCenter"
                                app:tint="@color/white" />

                        </FrameLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/change_role"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900"
                        android:lineSpacingMultiplier="1.2" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_forward"
                        android:contentDescription="@string/next"
                        app:tint="@color/gray_700" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- HTTP configuration - allows cleartext traffic for development (Phase 1) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust system certificates -->
            <certificates src="system"/>
            <!-- Trust user-added certificates (for self-signed certificates) -->
            <certificates src="user"/>
        </trust-anchors>
    </base-config>

    <!-- Current: IP-based access (Phase 1 - HTTP with port 8080) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">132.72.50.52</domain>
        <domain includeSubdomains="true">132.72.50.53</domain>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>

    <!-- BGU HTTPS domains (via IT reverse proxy with SSL) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">semscan.bgu.ac.il</domain>
        <domain includeSubdomains="true">testsemscan.bgu.ac.il</domain>
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
</network-security-config>